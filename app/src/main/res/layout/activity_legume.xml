<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cut_card_background"
    tools:context=".LegumeActivity">

    <include

        layout="@layout/toolbar">

    </include>


    <TextView
        android:id="@+id/pTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Mes Légumes"
        android:textColor="@color/green_2"
        android:textSize="35dp"
        android:textStyle="bold"
        android:paddingRight="150dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/toolbar"
        />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pTitleTxt"
        android:rowCount="4"
        android:columnCount="3"
        >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|center_horizontal"
            >

            <ImageView
                android:id="@+id/pOkockImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/okock"
                />
            <TextView
                android:id="@+id/pOkockTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="okock"
                android:textColor="@color/green_2"
                android:textSize="15dp"
                android:textStyle="italic"
                android:layout_gravity="center"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                >

                <ImageView
                    android:id="@+id/pFollonImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fol"
                    />
                <TextView
                    android:id="@+id/pFollonTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follon"
                    android:textColor="@color/green_2"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"

                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                >

                <ImageView
                    android:id="@+id/pNdoleImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ndole"
                    />
                <TextView
                    android:id="@+id/pNdoleTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ndolè"
                    android:textColor="@color/green_2"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"

                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                >

                <ImageView
                    android:id="@+id/pChouxImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/choux"
                    />
                <TextView
                    android:id="@+id/pChouxTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choux"
                    android:textColor="@color/green_2"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"

                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                >

                <ImageView
                    android:id="@+id/pGomboImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gombo"
                    />
                <TextView
                    android:id="@+id/pGomboTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gombo"
                    android:textColor="@color/green_2"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"

                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                >

                <ImageView
                    android:id="@+id/pPersilImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/persil"
                    />
                <TextView
                    android:id="@+id/pPersilTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Persil"
                    android:textColor="@color/green_2"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"

                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical|center_horizontal"
                >

                <ImageView
                    android:id="@+id/pKelenkelenImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/kelenkelen"
                    />
                <TextView
                    android:id="@+id/pKelenkelenTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelenkelen"
                    android:textColor="@color/green_2"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:layout_gravity="center"

                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
    <include
        layout="@layout/bottom_navigation_view"
        >

    </include>
</RelativeLayout>